<div class = "back-box">
<h3>投稿を検索</h3>
 <%= form_tag({controller:"sends",action:"shop"}, method: :get) do %>
   <%= text_field_tag :search, placeholder="国名/県名/地名"%>
   <%= submit_tag '検索する'  %>
<% end %>

<div class="category">  
  <h5><%= link_to "スポット", sends_spot_path %></h5>
  <br>
  <h3>お店</h3>
  <br>
  <h5><%= link_to "宿", sends_accommodation_path %></h5>
</div>
<%= link_to "新規投稿へ", new_send_path %>

<div class = "main">


<div class="shop-container">
    <% @shops.each do |t| %>
        <h3><%= t.title %></h3>
        <p>住所:<%= t.address %></p>
        <p>アクセス:<%= t.access %></p>
        <p>詳細:<%= t.detail %></p>

      <div>
        <h5>おすすめ度：
        <span class="star-rating">
        <span class="star-rating-front" style="width: <%= getPercent(t.overall) %>%;">★★★★★</span>
        <span class="star-rating-back">★★★★★</span>
        </span> 
        </h5>
      </div>

      <%= link_to "詳細へ", send_path(t.id) %>

      <% if user_signed_in? && current_user.id == t.user_id %>
          <%= link_to "編集", edit_send_path(t.id) %>
          <%= button_to "削除", send_path(t.id), method: :delete %>
      <% end %> 
      
    <% end %>
</div>


<div id='map'></div>

<script>
    function initMap() {

      let latlng = new google.maps.LatLng(38.60, 139.5);
  
      let styles = [
           {
            stylers: [
             { "saturation": 0 },
             { "lightness": 0 }
            ]
           }
          ];

      let map = new google.maps.Map(document.getElementById('map'), {
          zoom: 5.5,
          styles: styles,
          center: latlng
      });
      let transitLayer = new google.maps.TransitLayer();
      transitLayer.setMap(map);

      <% @shops.each do |shop|%>
        ( function() { 
          let markerLatLng = { lat: <%= shop.latitude %>, lng: <%= shop.longitude %> }; 
          let marker = new google.maps.Marker({ 
            position: markerLatLng, 
            map: map 
          });

          let infowindow = new google.maps.InfoWindow({
            position: markerLatLng,
            content: "<a href='<%= send_url(shop.id) %>' target='_blank'><h5><%= shop.title %></h5><%= shop.detail %></a>"
          }); 
          marker.addListener('click', function() {
            infowindow.open(map, marker);
          });

       })();
      <% end %>

  }
</script>

<script  async 
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBXUvaxi2f8wQUIgbH1uh-WNjLplM-J2eg&callback=initMap">
</script>


</div>

</div>


